<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                                     xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                     android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp" android:background="@color/colorNavHeader">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/edit_project_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:paddingEnd="16dp"
                android:paddingStart="6dp"
                android:theme="@style/AppTheme.FullScreenDialog"
                app:contentInsetStartWithNavigation="0dp"
                app:navigationIcon="@drawable/baseline_close_white_24dp"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#222222"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <EditText
                android:background="@android:color/transparent"
                android:textColor="#DEFFFFFF"
                android:textStyle="normal"
                android:fontFamily="@font/montserrat"
                android:layout_width="0dp"
                android:paddingTop="8dp"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:id="@+id/client_name_edit_text"
                app:layout_constraintStart_toStartOf="@+id/client_name_text_view"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/client_name_text_view"/>
        <TextView
                android:textAppearance="@android:style/Theme.Leanback.FormWizard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorNavHeader"
                android:textAlignment="textStart"
                android:fontFamily="@font/montserrat"
                android:textSize="11sp"
                android:textColor="#99FFFFFF"
                android:textStyle="bold"
                android:text="PROJECT NAME"
                android:paddingLeft="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:id="@+id/project_frag_project_label"/>
        <EditText
                android:background="@color/colorNavHeader"
                android:textColor="#DEFFFFFF"
                android:textStyle="normal"
                android:fontFamily="@font/montserrat"
                android:layout_width="0dp"
                android:paddingTop="8dp"
                android:textSize="14sp"
                android:paddingStart="16dp"
                android:paddingBottom="15dp"
                android:layout_height="wrap_content"
                android:id="@+id/project_frag_project_name"
                app:layout_constraintStart_toStartOf="@+id/project_frag_project_label"
                app:layout_constraintTop_toBottomOf="@+id/project_frag_project_label"
                app:layout_constraintEnd_toEndOf="@+id/project_frag_project_label"/>
        <TextView
                android:text="CLIENT NAME"
                android:fontFamily="@font/montserrat"
                android:textColor="#99FFFFFF"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/client_name_text_view" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/project_frag_project_name" android:layout_marginTop="12dp"/>
        <TextView
                android:text="START TIME"
                android:background="@drawable/textview_border"
                android:textColor="#99FFFFFF"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:layout_width="0dp"
                android:paddingTop="12dp"
                android:paddingStart="16dp"
                android:textSize="11sp"
                android:layout_height="60dp"
                android:id="@+id/start_time_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/client_name_edit_text"
                app:layout_constraintEnd_toStartOf="@+id/end_time_tv"/>
        <TextView
                android:text="END TIME"
                android:background="@drawable/textview_border"
                android:textColor="#99FFFFFF"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:layout_width="0dp"
                android:paddingTop="12dp"
                android:paddingStart="16dp"
                android:textSize="11sp"
                android:layout_height="60dp"
                android:id="@+id/end_time_tv"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/start_time_tv"
                app:layout_constraintTop_toBottomOf="@+id/client_name_edit_text"/>
        <TextView
                android:text="DURATION"
                android:background="@drawable/textview_border"
                android:textColor="#99FFFFFF"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:layout_width="0dp"
                android:paddingTop="12dp"
                android:paddingStart="16dp"
                android:textSize="11sp"
                android:layout_height="60dp"
                android:id="@+id/duration_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/start_time_tv"
                app:layout_constraintEnd_toStartOf="@+id/hourly_tv"/>
        <TextView
                android:text="HOURLY RATE"
                android:background="@drawable/textview_border"
                android:textColor="#99FFFFFF"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:layout_width="0dp"
                android:paddingTop="12dp"
                android:paddingStart="16dp"
                android:textSize="11sp"
                android:layout_height="60dp"
                android:id="@+id/hourly_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/start_time_tv"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/end_time_tv"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="60dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/duration_tv"/>
        <EditText
                android:background="@android:color/transparent"
                android:paddingTop="34dp"
                android:paddingStart="16dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/textView2" app:layout_constraintStart_toStartOf="@+id/duration_tv"
                app:layout_constraintTop_toTopOf="@+id/duration_tv"
                app:layout_constraintBottom_toBottomOf="@+id/duration_tv"
                app:layout_constraintEnd_toStartOf="@+id/hourly_tv" app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintVertical_bias="1.0"/>
        <EditText
                android:background="@android:color/transparent"
                android:paddingTop="34dp"
                android:paddingStart="16dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/textView6"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="@+id/end_time_tv"
                app:layout_constraintEnd_toEndOf="@+id/end_time_tv"
                app:layout_constraintBottom_toTopOf="@+id/hourly_tv"/>
        <EditText
                android:background="@android:color/transparent"
                android:paddingTop="34dp"
                android:paddingStart="16dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/textView7"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="@+id/hourly_tv"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:layout_constraintBottom_toBottomOf="@+id/hourly_tv"/>
        <EditText
                android:background="@android:color/transparent"
                android:paddingTop="34dp"
                android:paddingStart="16dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/textView8"
                app:layout_constraintStart_toStartOf="@+id/start_time_tv"
                app:layout_constraintEnd_toStartOf="@+id/end_time_tv"
                app:layout_constraintTop_toTopOf="@+id/start_time_tv"
                app:layout_constraintBottom_toTopOf="@+id/textView2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>