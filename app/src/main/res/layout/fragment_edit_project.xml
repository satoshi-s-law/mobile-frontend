<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                                     xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                     android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp" android:background="@color/colorNavHeader">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/edit_project_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:paddingEnd="16dp"
                android:paddingStart="6dp"
                android:theme="@style/AppTheme.FullScreenDialog"
                app:contentInsetStartWithNavigation="0dp"
                app:navigationIcon="@drawable/baseline_close_white_24dp"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#222222"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
                android:text="DELETE PROJECT"
                android:fontFamily="@font/montserrat"
                android:textColor="#FFFF8680"
                android:textStyle="normal"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/client_name_text_view2"
                android:layout_marginTop="37dp"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
        <TextView
                android:text="CREATE INVOICE"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/timer_circle_border"
                android:textColor="#FFFFCC80"
                android:textStyle="normal"
                android:textSize="14sp"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:paddingStart="15dp"
                android:paddingEnd="14dp"
                android:id="@+id/delete_project_tv"
                android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/client_name_text_view2"
                app:layout_constraintBottom_toBottomOf="@+id/client_name_text_view2"
                app:layout_constraintStart_toEndOf="@+id/client_name_text_view2" android:layout_marginStart="52dp"/>
        <EditText
                android:background="@android:color/transparent"
                android:textColor="#DEFFFFFF"
                android:textStyle="normal"
                android:fontFamily="@font/montserrat"
                android:layout_width="0dp"
                android:paddingTop="8dp"
                android:paddingBottom="7dp"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:id="@+id/client_name_edit_text"
                app:layout_constraintStart_toStartOf="@+id/client_name_text_view"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/client_name_text_view"/>
        <TextView
                android:textAppearance="@android:style/Theme.Leanback.FormWizard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorNavHeader"
                android:textAlignment="textStart"
                android:fontFamily="@font/montserrat"
                android:textSize="11sp"
                android:textColor="#99FFFFFF"
                android:textStyle="bold"
                android:text="PROJECT NAME"
                android:paddingLeft="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:id="@+id/project_frag_project_label"/>
        <EditText
                android:background="@color/colorNavHeader"
                android:textColor="#DEFFFFFF"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:layout_width="0dp"
                android:paddingTop="8dp"
                android:textSize="14sp"
                android:paddingStart="16dp"
                android:paddingBottom="15dp"
                android:layout_height="wrap_content"
                android:id="@+id/project_frag_project_name"
                app:layout_constraintStart_toStartOf="@+id/project_frag_project_label"
                app:layout_constraintTop_toBottomOf="@+id/project_frag_project_label"
                app:layout_constraintEnd_toEndOf="@+id/project_frag_project_label"/>
        <TextView
                android:text="CLIENT NAME"
                android:fontFamily="@font/montserrat"
                android:textColor="#99FFFFFF"
                android:textStyle="bold"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/client_name_text_view" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/project_frag_project_name" android:layout_marginTop="12dp"/>
        <TextView
                android:text="START TIME"
                android:background="@drawable/textview_border"
                android:textColor="#99FFFFFF"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:layout_width="0dp"
                android:paddingTop="12dp"
                android:paddingStart="16dp"
                android:textSize="11sp"
                android:layout_height="60dp"
                android:id="@+id/start_time_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/client_name_edit_text"
                app:layout_constraintEnd_toStartOf="@+id/end_time_tv"/>
        <TextView
                android:text="END TIME"
                android:background="@drawable/textview_border"
                android:textColor="#99FFFFFF"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:layout_width="0dp"
                android:paddingTop="12dp"
                android:paddingStart="16dp"
                android:textSize="11sp"
                android:layout_height="60dp"
                android:id="@+id/end_time_tv"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/start_time_tv"
                app:layout_constraintTop_toBottomOf="@+id/client_name_edit_text"/>
        <TextView
                android:text="DURATION"
                android:background="@drawable/textview_border"
                android:textColor="#99FFFFFF"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:layout_width="0dp"
                android:paddingTop="12dp"
                android:paddingStart="16dp"
                android:textSize="11sp"
                android:layout_height="60dp"
                android:id="@+id/duration_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/start_time_tv"
                app:layout_constraintEnd_toStartOf="@+id/hourly_tv"/>
        <TextView
                android:text="HOURLY RATE"
                android:background="@drawable/textview_border"
                android:textColor="#99FFFFFF"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:layout_width="0dp"
                android:paddingTop="12dp"
                android:paddingStart="16dp"
                android:textSize="11sp"
                android:layout_height="60dp"
                android:id="@+id/hourly_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/start_time_tv"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/end_time_tv"/>
        <EditText
                android:textSize="14sp"
                android:inputType="text"
                android:textColor="#DEFFFFFF"
                android:textStyle="normal"
                android:fontFamily="@font/montserrat"
                android:lineSpacingMultiplier="1.29"
                android:background="@android:color/transparent"
                android:paddingTop="34dp"
                android:paddingBottom="7dp"
                android:paddingStart="16dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/start_edittext"
                app:layout_constraintStart_toStartOf="@+id/start_time_tv"
                app:layout_constraintEnd_toStartOf="@+id/end_time_tv"
                app:layout_constraintTop_toTopOf="@+id/start_time_tv"
                app:layout_constraintBottom_toTopOf="@+id/duration_edittext"/>
        <EditText
                android:textSize="14sp"
                android:inputType="time"
                android:textColor="#DEFFFFFF"
                android:textStyle="normal"
                android:lineSpacingMultiplier="1.29"
                android:fontFamily="@font/montserrat"
                android:background="@android:color/transparent"
                android:paddingTop="34dp"
                android:paddingBottom="7dp"
                android:paddingStart="16dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/end_edittext"
                app:layout_constraintStart_toEndOf="@+id/start_edittext"
                app:layout_constraintTop_toTopOf="@+id/end_time_tv"
                app:layout_constraintEnd_toEndOf="@+id/end_time_tv"
                app:layout_constraintBottom_toTopOf="@+id/hourly_tv"/>
        <EditText
                android:textSize="14sp"
                android:textColor="#DEFFFFFF"
                android:textStyle="normal"
                android:lineSpacingMultiplier="1.29"
                android:fontFamily="@font/montserrat"
                android:background="@android:color/transparent"
                android:paddingTop="34dp"
                android:paddingStart="16dp"
                android:paddingBottom="7dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/duration_edittext" app:layout_constraintStart_toStartOf="@+id/duration_tv"
                app:layout_constraintTop_toTopOf="@+id/duration_tv"
                app:layout_constraintBottom_toBottomOf="@+id/duration_tv"
                app:layout_constraintEnd_toStartOf="@+id/hourly_tv" app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintVertical_bias="1.0" android:inputType="time"/>
        <EditText
                android:textSize="14sp"
                android:textColor="#DEFFFFFF"
                android:textStyle="normal"
                android:lineSpacingMultiplier="1.29"
                android:fontFamily="@font/montserrat"
                android:background="@android:color/transparent"
                android:paddingTop="34dp"
                android:inputType="number|numberDecimal"
                android:paddingStart="16dp"
                android:paddingBottom="7dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/hourly_edit_text"
                app:layout_constraintStart_toEndOf="@+id/duration_edittext"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="@+id/hourly_tv"
                app:layout_constraintTop_toBottomOf="@+id/end_edittext"
                app:layout_constraintBottom_toBottomOf="@+id/hourly_tv"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/duration_tv" android:layout_marginTop="14dp"
                android:layout_marginStart="40dp" android:id="@+id/recyclerView"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/recyclerView"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="4dp"
                android:id="@+id/constraintLayout">
            <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp" app:srcCompat="@drawable/ic_add_task"
                    android:id="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:scaleType="centerInside"/>
            <TextView
                    android:text="Add Task"
                    android:fontFamily="@font/montserrat"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#99FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_task_tv" app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="3dp" app:layout_constraintHorizontal_bias="0.304"
                    app:layout_constraintVertical_bias="0.637"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>